<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.road_friends.rentalcar.mapper.APIMypageUserMapper">

    <resultMap id="userResultMap" type="com.road_friends.rentalcar.dto.UserDto">
        <id property="userNum" column="user_num"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="userEmail" column="user_email"/>
        <result property="userPhone" column="user_phone"/>
        <result property="userGender" column="user_gender"/>
        <result property="userBirth" column="user_birth"/>
        <result property="userAddress" column="user_address"/>
        <result property="userStatus" column="user_status"/>
        <result property="enabled" column="enabled"/>

        <!-- roles 필드를 List<RoleDto>로 매핑 -->
        <collection property="roles" ofType="com.road_friends.rentalcar.dto.RoleDto">
            <id property="id" column="role_id"/>
            <result property="name" column="role_name"/>
        </collection>
    </resultMap>

    <!-- 로그인한 사용자 정보 조회 -->
    <select id="findById" resultMap="userResultMap">
        SELECT
            u.user_num,
            u.user_id,
            u.user_name,
            u.user_email,
            u.user_phone,
            u.user_gender,
            u.user_birth,
            u.user_address,
            u.user_status,
            u.enabled,
            r.id AS role_id,
            r.name AS role_name
        FROM user u
        JOIN user_roles ur ON u.user_num = ur.user_id
        JOIN roles r ON ur.role_id = r.id
        WHERE u.user_id = #{userId};
    </select>

    <!-- 로그인한 사용자 정보 수정 -->
    <update id="update">
        UPDATE user
        SET user_name = #{userName}, user_email = #{userEmail},
        user_phone = #{userPhone} , user_address = #{userAddress}
        WHERE user_id = #{userId}
    </update>

    <!-- 로그인한 사용자 탈퇴 (DELETE 대신 enabled 값을 false 변경) -->
    <delete id="disable">
        UPDATE user SET enabled = false WHERE user_id = #{userId}
    </delete>


</mapper>
